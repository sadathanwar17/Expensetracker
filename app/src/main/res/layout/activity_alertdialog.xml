<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


        <TextView
            android:id="@+id/alertDialogField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Field Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"/>

        <TextView
            android:id="@+id/alertDialogValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Field Value"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/alertDialogFields"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"/>



    <EditText
        android:id="@+id/alertDialogFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@+id/alertDialogField"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/alertDialogValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@+id/alertDialogValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>